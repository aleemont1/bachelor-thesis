\ProvidesPackage{notes}

% Carica i pacchetti necessari
\RequirePackage{xcolor}
\RequirePackage{xargs}
\RequirePackage{todonotes}

\providecommand{\theauthor}{Alessandro}
% Syntax: \sidenote[Author][Color]{Note}
\newcommandx{\sidenote}[3][1=\theauthor,2=green!50!white]{\reversemarginpar\todo[size=\tiny,color=#2]{\textbf{#1:} #3}}

% Syntax: \note[Author][Color]{Note}
\newcommandx{\note}[3][1=\theauthor,2=green]{\todo[size=\scriptsize,color=#2,inline]{\textbf{#1:} #3}}

% Placeholder per citazioni mancanti
\newcommand{\missingref}[1][something]{\sidenote{cite #1}}
