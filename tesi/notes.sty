\ProvidesPackage{notes}

% Carica i pacchetti necessari
\RequirePackage{xcolor}
\RequirePackage{xargs}
\RequirePackage{todonotes}

\providecommand{\theauthor}{Alessandro}
% Syntax: \sidenote[Author][Color]{Note}
\newcommandx{\sidenote}[3][1=\theauthor,2=green!50!white]{%
    \ifdefined\HCode
    \else%
        \reversemarginpar\todo[size=\tiny,color=#2]{\textbf{#1:} #3}
    \fi%
}

% Syntax: \note[Author][Color]{Note}
\newcommandx{\note}[3][1=\theauthor,2=green]{%
    \ifdefined\HCode
    \else%
        \todo[size=\scriptsize,color=#2,inline]{\textbf{#1:} #3}
    \fi%
}

% Placeholder per citazioni mancanti
\newcommand{\missingref}[1][something]{%
    \ifdefined\HCode
    \else%
        \sidenote{cite #1}
    \fi%
}
